body{
  font-family:Arial,sans-serif;
  margin:0;
  padding:0;
  background-color:#f8f9fa;
}
.container{
  padding:2em;
}
.card{
  background.color:white;
  border-radius: 10px;
  box-shadow:0 4px 8px rgba(0,0,0,0.1);
  transition:transform 0.3;
  }
  .card:hover:{
    transform: translateY(-5px)
  }
  .card-body{
    padding:1.5em;
  }
  .card-title{
    font-weight:bold;
    font-size:1.2em;
    margin-bottom:0.5em;
  }
  .card.text{
    color:#666;
  }
    
